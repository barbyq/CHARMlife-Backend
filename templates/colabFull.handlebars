		{{#each secciones}}
			 <span class="seccion">{{seccion}}</span>	
		{{/each}}
	</li>
	
	{{#if link_extra}}
		<li><strong>Extras:</strong> <a href="http://{{link_extra}}" target="_blank">{{link_extra}}</a></li>
	{{/if}}
</ul>
<br class="clear">
<p class="controls">
	<a href="#colaboradores/{{id}}/edit">Editar</a>
	<a href="#colaboradores" id="{{id}}" class="borrar">Borrar</a>
</p>



